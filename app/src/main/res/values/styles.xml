<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="FloatingActionBar" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primaryColor</item>
    </style>

    <style name="MaterialCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/stroke_color</item>
        <item name="cardForegroundColor">@color/colorTransparent</item>
        <item name="cardBackgroundColor">@color/white_50</item>
    </style>

    <style name="Toolbar" parent="@style/Widget.MaterialComponents.Toolbar.Surface">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorPrimary">@color/colorGrey</item>
        <item name="colorPrimaryDark">@color/colorGrey</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>